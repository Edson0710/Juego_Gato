<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edson0710.gato.MainActivity">


    <TextView
        android:id="@+id/j1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugador 1: 0"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/j2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugador 2: 0"
        android:layout_below="@+id/j1"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:text="Reiniciar"
        android:textSize="21sp" />

    <Button
        android:id="@+id/btn_00"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/btn_10"
        android:layout_alignStart="@+id/btn_10"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_01"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/btn_11"
        android:layout_alignStart="@+id/btn_11"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_02"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/btn_12"
        android:layout_alignStart="@+id/btn_12"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_10"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_11"
        android:background="@color/colorPrimaryDark"
        android:layout_marginRight="16dp"/>

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/btn_11" />

    <Button
        android:id="@+id/btn_12"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btn_11"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="16dp"/>

    <Button
        android:id="@+id/btn_20"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/btn_10"
        android:layout_below="@+id/btn_10"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_21"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/btn_11"
        android:layout_below="@+id/btn_11"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btn_22"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/btn_12"
        android:layout_below="@+id/btn_12"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark" />


</RelativeLayout>
