<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edson0710.gato.MainActivity">


    <TextView
        android:id="@+id/j1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugador 1: 0"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/j2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugador 2: 0"
        android:layout_below="@+id/j1"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:text="Reiniciar"
        android:textSize="20sp" />

    <Button
        android:id="@+id/a1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/b1"
        android:layout_alignStart="@+id/b1"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/a2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/b2"
        android:layout_alignStart="@+id/b2"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/a3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/b3"
        android:layout_alignStart="@+id/b3"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/b2"
        android:background="@color/colorPrimaryDark"
        android:layout_marginRight="16dp"/>

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/b2" />

    <Button
        android:id="@+id/b3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/b2"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="16dp"/>

    <Button
        android:id="@+id/c1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/b1"
        android:layout_below="@+id/b1"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/c2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/b2"
        android:layout_below="@+id/b2"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/c3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/b3"
        android:layout_below="@+id/b3"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="16dp"/>


</RelativeLayout>
